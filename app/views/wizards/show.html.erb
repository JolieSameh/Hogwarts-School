<div class="container-fluid bg-light text-light p-5 container">
    <div class="container bg-secondary p-5">
        <h1 class="display-4"> <%= @wizard.name%> </h1>
        <hr>
        <p>Email:   <%= @wizard.email%> </p>
        <p>House:   <%= @wizard.house%> </p>
        <p>Bio:   <%= @wizard.bio%> </p>
        <p>Birthday:   <%= @wizard.birthday%> </p>
        <p>Any wizard relatives?  <%= @wizard.relatives%> </p>
    </div>
    <br>
    <%= link_to "Edit this wizard", edit_wizard_path(@wizard), class:"btn btn-dark me-md-2" %>|  
    <%= link_to "Back to wizards", wizards_path, class:"btn btn-dark me-md-2"%>
    <br>
    
    <%= link_to "Destroy this wizard", @wizard, method: :delete, data: { turbo_method: :delete,
    turbo_confirm: 'Are you sure?' }%>
</div>
<br>
<br>
