<br>
<h1 style="width:80%;margin-left:auto;margin-right:auto;">Spells</h1>

<table class="table table-striped table-hover" style="width:80%;margin-left:auto;margin-right:auto;"> 
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody class="table-group-divider" >
    <% @spells.each do |spell| %>
        <tr>
          <td><%= spell.name %></td>
          <td><%= spell.description %></td>
          <td><%= link_to "Show", spell %></td>
          <td><%= link_to "Edit", edit_spell_path(wizard) %></td>
          <td><%= link_to "Remove", spell, method: :delete, data: {turbo_method: :delete,
          turbo_confirm: 'Are you sure?' } %></td>
        </tr>
  
    <% end %>
  </tbody>
</table>

<div style="width:80%;margin-left:auto;margin-right:auto;">
  <%= link_to "New Spell", new_spell_path, class:"btn btn-dark me-md-2"%>
</div>