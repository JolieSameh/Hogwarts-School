<div class="card" style="width:80%;margin-left:auto;margin-right:auto;">

  <div class="card-header">
    <h1>Spells</h1>
  </div>

  <div class="card-body">
    <table class="table table-striped table-hover"> 
      <thead class="table-dark">
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody class="table-group-divider" >
        <% @spells.each do |spell| %>
            <tr>
              <td><%= spell.name %></td>
              <td><%= spell.description %></td>
              <td><%= link_to "Show", spell %></td>
              <td><%= link_to "Edit", edit_spell_path(spell) %></td>
              <td><%= link_to "Remove", spell, method: :delete, data: {turbo_method: :delete,
              turbo_confirm: 'Are you sure?' } %></td>
            </tr>
      
        <% end %>
      </tbody>
    </table>

    <div>
      <%= link_to "New Spell", new_spell_path, class:"btn btn-dark me-md-2"%>
    </div>
  </div>