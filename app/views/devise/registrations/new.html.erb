<div class="card container">

  <div class="card-header">
    <h2>Sign up</h2>
  </div>

  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field form group">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"form-control" %>
      </div>

      <div class="field form group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
      </div>


      <div class="field form group">
        <%= f.label :role %><br />
        <%= f.radio_button :role, 1 %>  Admin 
        <%= f.radio_button :role, 0 %>  User <br/> 
      </div>

      <div class="field form group">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(8 characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
      </div>

      <div class="field form group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" , class:"form-control"%>
      </div>


      <div class="field">
        <%= f.label :birthday %><br />
        <%= f.date_field :birthday, autofocus: true, autocomplete: "birthday", class:"form-control" %>
      </div>
      
      <div class="field form group">
        <%= f.label :bio %><br />
        <%= f.text_field :bio, autofocus: true, autocomplete: "bio", class:"form-control" %>
      </div>

      <div class="field form check">
        <%= f.label :relatives %> <br />
        <%= f.radio_button :relatives, 'No'  %>  No 
        <%= f.radio_button :relatives, 'Yes' %>  Yes <br/>
      </div>

      
      <br>
      <div class="field form group">
        <% random_house = ["Gryffindor", "Hufflepuff", "Slytherin", "Ravenclaw"].sample %>
        <h4><%= f.label :house %></h4><i>(Connact the administrator to discuss any change) <br>
        <%= f.text_field :house, readonly: true, class:"form-control", value:random_house %>
      </div>
      
      <br>
      
      <div class="actions">
        <%= f.submit "Sign up" , class:"btn btn-dark me-md-2"%>
        <br>
      </div>
      <%= render "devise/shared/links" %>

    <% end %>
  </div>
</div>

