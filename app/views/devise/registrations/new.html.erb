<div class="card container">

  <div class="card-header">
    <h2>Sign up</h2>
  </div>

  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field form group"">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"form-control" %>
      </div>

      <div class="field form group"">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
      </div>

      <div class="field form group"">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(8 characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
      </div>

      <div class="field form group"">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" , class:"form-control"%>
      </div>


      <div class="field">
        <%= f.label :birthday %><br />
        <%= f.date_field :birthday, autofocus: true, autocomplete: "birthday", class:"form-control" %>
      </div>
      
      <div class="field form group"">
        <%= f.label :bio %><br />
        <%= f.text_field :bio, autofocus: true, autocomplete: "bio", class:"form-control" %>
      </div>

      <div class="field form check">
        <%= f.label :relatives %>
        <%= f.check_box :relatives %>
      </div>

      <%= hidden_field_tag :house, "value: 'A'" %>
      <br>
      
      <div class="actions">
        <%= f.submit "Sign up" %>
      </div>
      <%= render "devise/shared/links" %>

    <% end %>
  </div>
</div>

