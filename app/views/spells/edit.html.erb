<div class="card" style="width:80%;margin-left:auto;margin-right:auto;">

  <div class="card-header">
    <h1>Editing spell</h1>
  </div>

  <div class="card-body">
    <%= render "form", spell: @spell %>

    <br>
    <%= link_to "Show this spell", @spell, class:"btn btn-dark me-md-2" %> |
    <%= link_to "Back to spells", spells_path , class:"btn btn-dark me-md-2"%>
    <br>
    <br>
    <%= link_to "Remove", @spell, method: :delete, data: {turbo_method: :delete,
    turbo_confirm: 'Are you sure?' }, class: "btn btn-danger justify-content-md-end" %>
  </div>

  
</div>
