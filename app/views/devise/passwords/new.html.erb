<div class="card" style="width:80%;margin-left:auto;margin-right:auto;">

  <div class="card-header">
    <h2>Forgot your password?</h2>
  </div>

  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field form group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"Email"%>
      </div>

      <br>
      <%= f.submit "Send me reset password instructions", class:"btn btn-dark me-md-2" %>
      <% end %>

    <%= render "devise/shared/links" %>
  </div>
