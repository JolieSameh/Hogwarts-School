<div class="card container">

  <div class="card-header">
    <h2>Edit Wizard Profile</h2>
    
  </div>

  <div class="card-body">
    <%= form_with model: @user, url: admin_update_path(@user), html: { method: :put } do |f| %>
      <div class="field form group">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name" , class:"form-control"%>
      </div>

      <div class="field form group">
        <%= f.label :email %><br />
        <%= f.email_field :email, readonly: true, autofocus: true, autocomplete: "email" , class:"form-control"%>
      </div>

      <div class="field form group">
        <%= f.label :password %> <i>(leave blank if you donot want to change it)</i><br />
        <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
        <% if @minimum_password_length %>
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>

      <div class="field form group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" , class:"form-control" %>
      </div>
      <div class="field form group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control"  %>
      </div>


      <div class="field form group">
        <%= f.label :house %> <br /><i>(Connact the administrator to discuss any change) <br />
        <%= f.text_field :house, class:"form-control" %>
      </div>

      <div class="field form group">
        <%= f.label :birthday %><br />
        <%= f.date_field :birthday, autofocus: true, autocomplete: "birthday", class:"form-control"  %>
      </div>
      
      <div class="field form group">
        <%= f.label :bio %><br />
        <%= f.text_field :bio, autofocus: true, autocomplete: "bio", class:"form-control"  %>
      </div>

      <div class="field form check">
        <%= f.label :relatives %> <br />
        <%= f.radio_button :relatives, 'No'  %>  No 
        <%= f.radio_button :relatives, 'Yes' %>  Yes <br/>
      </div>

      <br>
      <div class="actions">
        <%= f.submit "Update", class:"btn btn-dark me-md-2" %>  
        <%= link_to "Back", :back, class:"btn btn-dark me-md-2" %><br><br>
      </div>

    <% end %>
  </div>
</div>
